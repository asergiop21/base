<%= simple_form_for(@invoice) do |f| %>
   <%= f.error_notification %>
<div> 
   <div >

      <div class="span3 side">
         <%= simple_form_for '', method: 'get' do |f| %>
            <div class="search">
            <%= f.input( :q, label: 'Clientes', input_html: { 
               data: {'autocomplete-field' => true,
                      'autocomplete-for' => '#_customer_id',
                      'autocomplete-url' => customers_path(format: :json)
            } 
            }) %>
         <%= f.input :customer_id, as: :hidden%>
         </div>
      <% end %> 
         <%= f.input :current_account,  label: "Cuenta corriente"%>
      </div>
   </div>
   <div class="section">
      <div class="container-fluid center ">
         <table class="table ">
            <tr>
               <th class="span2">Articulos</th>
               <th class="span2">Cantidad</th>
               <th class="span1">Precio Unit</th>
               <th class="span1">Descuento</th>
               <th class="span1">Precio Total</th>
            </tr>
            <%= f.fields_for :orders, method: 'get' do |ph| %>
               <%=render 'orders', f: ph  %>
         <% end %>
         </table>
         <div>
            <tr>
               <td>     <%= link_to_add_fields 'Agregar  Item', f , :orders %></td>
            </tr>
         </div>
         <div class ="total_1 pull-right h2">
            <h2>  Total</h2>
            <h2><%=f.input :price_total, label: false, :input_html=> {class: "input-small"}, readonly: true, as: :string %></h2>
         </div>
         <br>
         <div class="span10">
            <%= f.fields_for :payments, method: 'get' do |pay| %>
               <%= render 'payments', f: pay %>
         <% end %>
            <div class="span10 pull-right">
               <%= link_to_add_fields 'Agregar Pago', f , :payments %>
            </div>
         </div>
      </div>
      <div class="form-actions">
         <%= f.submit class: 'btn btn-primary' %>
      </div>
   </div>
</div>
<% end %>
