<%= simple_form_for @customer, :defaults =>{:input_html => {:class => 'span10'}} do |f| %>
  <div class="container"> 
    <div class="form-inputs">
      <div class="row-fluid">
  <%= f.error_notification %>
  <div class="span5">
    <%= f.input :name, :required=> true, :autofocus=>true %>
    <%= f.input :lastname,   :required=> true, :hint => 'no special characteres' %>
    <%= f.input :address,  :required=> true %>
    <%= f.input :neighborhood%>
    <%= f.input :email,  placeholder: 'user@domain.com'%>
    <%= f.input :dni%>
    <div class="fields">
    <%= f.simple_fields_for :phones do |ph| %>
       <%=render 'phones', f: ph  %>
     <% end %>
  <%= link_to_add_fields t('view.customers.add_phones'), f , :phones %>
  </div>
  </div>

  <div class="span5">
   <%= f.input :location_id do %>
           <%= f.collection_select :location_id,  Location.order(:name), :id, :name %>
           o Crear una <%=f.text_field :new_location  %>
   <% end  %>
   <%= f.input :description, :input_html => {:rows => 5}%>
    <%= f.input :cuit%>
   </div>
</div>
</div>
</div>
<div class="form-actions">
    <%= f.button  :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
